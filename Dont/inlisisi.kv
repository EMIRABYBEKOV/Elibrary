<ReaderProfile>:
    MDToolbar:
        id: tooltitle
        pos_hint: {"top": 1}
        elevation: 10
        title: 'InLibrary'
        left_action_items: [['menu',lambda x: da.set_state('toggle')]]
        right_action_items: [["exit-to-app", lambda x: root.callback()]]
        elevation: 12
        font_name:'fonts/welcome.ttf'
        size_hint: 1, .1
        md_bg_color: [156/255,45/255,230/255,1]

    MDNavigationLayout:
        ScreenManager:
            id: scrmng 
            MDScreen:
                MDFloatLayout:
                    
                    ScrollView:
                        pos_hint: {'top':.9}
                        size: self.size
                        
                        GridLayout:                        
                            size_hint_y: None
                            height: self.minimum_height + 100
                            width: self.minimum_width 
                            cols: 2
                            spacing: '8dp'
                            padding: '10dp'
                            id : readgrid

        MDNavigationDrawer:
            id: da
            screen_manager: scrmng 
            nav_drawer: da
            BoxLayout:
                orientation: 'vertical'
                

                MDLabel:
                    text: 'Reader Menu'
                    font_style: 'H1'
                    font_size: 25
                    halign: 'center'
                    size_hint_y: .1

                ScrollView:
                    size_hint_y: .9
                      
                    MDList:
                        id: readeslist

                        OneLineIconListItem:
                            text: 'Search for the Book'
                            on_release: root.search_book()
                            IconLeftWidget:
                                icon: 'book-search-outline'

                        OneLineIconListItem:
                            text: 'The Readed Books'
                            on_release: root.readed_books()
                            IconLeftWidget:
                                icon: 'playlist-check'                           

                        OneLineIconListItem:
                            text: 'Favorite Books'
                            on_release: root.favorites()
                            IconLeftWidget:
                                icon: 'heart-outline'  

                        OneLineIconListItem:
                            text: 'Wallet'
                            on_release: root.wallet()
                            IconLeftWidget:
                                icon: 'wallet-outline'

                        OneLineIconListItem:
                            text: 'Borrow the Book'
                            on_release: root.borrow()
                            IconLeftWidget:
                                icon: 'book-clock-outline'

                        OneLineIconListItem:
                            text: 'Return the Book'
                            on_release: root.returnbook()
                            IconLeftWidget:
                                icon: 'book-arrow-left-outline'
                        
                        OneLineIconListItem:
                            text: 'The Borrowed Books'
                            on_release: root.borrowed_list()
                            IconLeftWidget:
                                icon: 'book-marker-outline'
                        
                        OneLineIconListItem:
                            text: 'All Books'
                            on_release: root.all_books()
                            IconLeftWidget:
                                icon: 'database-outline'

                        OneLineIconListItem:
                            text: 'About InLibrary'
                            on_release: root.aboutlib()
                            IconLeftWidget:
                                icon: 'information-outline'


