<FirstScreen>:

    MDLabel:
        text: 'InLibrary'
        pos_hint: {"center_x": 0.5,"center_y":.9}
        halign: 'center'
        theme_text_color: 'Custom'
        text_color: 0,0,1,1
        font_size: 30
        font_name: 'fonts/header.ttf'

    Image:
        source: "images/books.png"
        pos_hint: {'center_x':.5,'center_y':.7}
        size_hint: None,None 
        size: 300,300

    MDLabel:
        text: 'Welcome to InLibrary!'
        pos_hint: {"center_x": 0.5,"center_y": .5}
        halign: 'center'
        theme_text_color: 'Custom'
        text_color: 0,0,1,1
        font_size: 26
        font_name:'fonts/welcome.ttf'
        
    


    MDFillRoundFlatIconButton:
        text: 'Sign In as a Librarian'
        md_bg_color: 1,1,1,1
        theme_text_color: 'Custom'
        text_color: 55/255,69/255,191/255,1
        pos_hint: {'center_x':.5,'center_y':.40}
        icon: 'library'
        icon_color: 55/255,69/255,191/255,1
        font_size: 20
        elevation: 25
        on_press: root.left()

    MDFillRoundFlatIconButton:
        text: 'Sign  In as a  Reader'
        md_bg_color: [1,1,1,1]
        theme_text_color: 'Custom'
        text_color: 55/255,69/255,191/255,1
        pos_hint: {'center_x':.5,'center_y':.30}
        icon: 'book-account'
        icon_color: 55/255,69/255,191/255,1
        font_size: 20
        elevation: 25
        on_press: root.rleft()
        #readerlog rprofile book_search

    MDFillRoundFlatIconButton:
        text: 'Reader Sign Up'
        md_bg_color: 1,1,1,1
        theme_text_color: 'Custom'
        text_color: 55/255,69/255,191/255,1
        pos_hint: {'center_x':.5,'center_y':.20}
        icon: 'account-plus'
        icon_color: 55/255,69/255,191/255,1
        font_size: 20
        elevation: 25
        on_press: root.readreg()
    
    MDFillRoundFlatIconButton:
        text: 'Librarian Sign Up'
        md_bg_color: 1,1,1,1
        theme_text_color: 'Custom'
        text_color: 55/255,69/255,191/255,1
        pos_hint: {'center_x':.5,'center_y':.10}
        icon: 'account-cowboy-hat'
        icon_color: 55/255,69/255,191/255,1
        font_size: 20
        elevation: 25
        on_press: root.libreg()



<LiblogScreen>:
    
    FloatLayout:
        MDToolbar:
            pos_hint: {"top": 1}
            left_action_items: [["arrow-left", lambda x: root.callback()]]
            specific_text_color: 156/255,45/255,230/255,1
            md_bg_color: 250/255, 250/255, 250/255, 1
        Image:
            source: "images/librarian.png"
            # size_hint: None,None
            # size: 300,300
            size_hint: (.4, .4)
            pos_hint: {"center_x": .5, "center_y": .78}
        MDLabel:
            id: libwelcome
            text: "Welcome, Dear Librarian!"
            pos_hint: {"center_x": .5, "center_y": .62}
            halign: "center"
            bold: True
            font_style: "H5"
        MDLabel:
            text: "Login to continue."
            pos_hint: {"center_x": .5, "center_y": .58}
            halign: "center"
            font_style: "Caption"
        MDTextField:
        
            hint_text: "Email"
            size_hint_x: .8
            pos_hint: {"center_x": .5, "center_y": .5}
            icon_right: "email"
            icon_right_color: 156/255,45/255,230/255,1
            id: lib_email
        MDTextField:
            hint_text: "Password"
            size_hint_x: .8
            pos_hint: {"center_x": .5, "center_y": .4}
            icon_right: "lock"
            password: True
            icon_right_color: 156/255,45/255,230/255,1
            id: lib_password
        MDTextButton:
            text: "Redefine password."
            pos_hint: {"center_x": .5, "center_y": .33}
            on_release: root.reset()
        MDFillRoundFlatIconButton:
            text: "Sign In"
            font_size: 20
            elevation: 8
            theme_text_color: "Custom"
            text_color: 254/255.0, 254/255.0, 254/255.0, 1
            pos_hint: {"center_x": .5, "center_y": .23}
            
            icon: "login"
            on_release:  root.loglib()
        



